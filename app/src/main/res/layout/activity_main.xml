<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/chose_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="งดออกเสียง"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/chose_three"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/chose_three"
        app:layout_constraintTop_toBottomOf="@+id/chose_three" />

    <Button
        android:id="@+id/chose_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="เลือกผู้สมัครหมายเลข 3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/chose_two"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/chose_two"
        app:layout_constraintTop_toBottomOf="@+id/chose_two" />

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="348dp"
        android:layout_height="129dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/exit_poll" />

    <Button
        android:id="@+id/chose_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="เลือกผู้สมัครหมายเลข 2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/chose_one"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/chose_one"
        app:layout_constraintTop_toBottomOf="@+id/chose_one" />

    <Button
        android:id="@+id/chose_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="เลือกผู้สมัครหมายเลข 1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_view"
        app:layout_constraintVertical_bias="0.107" />

    <Button
        android:id="@+id/score_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="ดูผล"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chose_no"
        app:layout_constraintStart_toStartOf="@+id/chose_no"
        app:layout_constraintTop_toBottomOf="@+id/chose_no"
        app:layout_constraintVertical_bias="0.876" />
</android.support.constraint.ConstraintLayout>